<!--            android:id="@+id/"-->
<!--            android:layout_width="231dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:textColorLink="@color/white"-->
<!--            android:hint="@string/repository_name"-->
<!--            android:textColorHint="@color/white"/>-->


    </LinearLayout>

</RelativeLayout>